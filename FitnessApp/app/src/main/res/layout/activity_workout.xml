<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:screenOrientation="portrait">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarWorkouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBicepsEx"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edit_text_border_buttons"
        android:text="BICEPS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAbsEx" />

    <Button
        android:id="@+id/btnChestEx"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edit_text_border_buttons"
        android:text="CHEST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackEx" />

    <Button
        android:id="@+id/btnBackEx"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edit_text_border_buttons"
        android:text="BACK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBicepsEx" />

    <Button
        android:id="@+id/btnAbsEx"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edit_text_border_buttons"
        android:text="Abs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarWorkouts" />

</androidx.constraintlayout.widget.ConstraintLayout>